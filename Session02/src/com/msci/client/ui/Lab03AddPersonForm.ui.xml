<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
		<h3>Add persons</h3>
		<p>
			Name <g:TextBox ui:field="nameTextBox"></g:TextBox>
		</p>
		<p>
			Age <g:TextBox ui:field="ageTextBox"></g:TextBox>
		</p>
		<p>
			Gender <g:RadioButton name="gender" text="Male" ui:field="maleRadio"></g:RadioButton>
			<g:RadioButton name="gender" text="Female" ui:field="femaleRadio"></g:RadioButton>
		</p>
		<p>
			<g:Button text="Add" ui:field="addButton"></g:Button>
		</p>
	</g:HTMLPanel>
</ui:UiBinder> 